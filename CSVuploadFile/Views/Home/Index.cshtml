@model List<YourProject.Models.CsvFile>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<h1>WELCOME!</h1>
<p>Use the menu to upload your CSV file and work with it</p>

<h2>Your CSV files</h2>

@if (!Model.Any())
{
    <p>No files uploaded yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>
                        <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Home", new { fileId = file.FileId })">Details</a>

                        <form asp-action="DeleteFile" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@file.FileId" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure that you want to delete this file?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
