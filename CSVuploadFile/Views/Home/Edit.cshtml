@model YourProject.Models.CsvRecord
@{
    ViewData["Title"] = "Edit Record";
}

<h2>Edit Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.RecordId" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">BirthDate</label>
        <input class="form-control" type="date" asp-for="BirthDate" />
    </div>
    <div class="mb-3">
        <label class="form-label">Married</label>
        <input class="form-check-input" type="checkbox" asp-for="Married" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input class="form-control" asp-for="Phone" />
    </div>
    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input class="form-control" type="number" step="0.01" asp-for="Salary" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
